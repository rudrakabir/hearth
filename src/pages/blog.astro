---
import { Astro } from 'astro';
const posts = Astro.fetchContent('../pages/blog/*.md').sort((a, b) => new Date(b.date) - new Date(a.date));
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
</head>
<body>
    <nav>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/about/">About</a></li>
            <li><a href="/work/">Work</a></li>
            <li><a href="/notes/">Notes</a></li>
            <li><a href="/speaking/">Speaking</a></li>
            <li><a href="/blog/">Blog</a></li>
        </ul>
    </nav>
    <header>
        <h1>Blog Posts</h1>
    </header>
    <main>
        <ul>
            {posts.map(post => (
                <li><a href={`/blog/${post.file.slice(0, -3)}`}>{post.title}</a> - Posted on {new Date(post.date).toLocaleDateString()}</li>
            ))}
        </ul>
    </main>
    <footer>
        <p>Copyright Â© 2023 All rights reserved.</p>
    </footer>
</body>
</html>

